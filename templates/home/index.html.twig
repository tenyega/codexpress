{% extends 'base.html.twig' %}

{% block title %}
	{{'Homepage'| trans}}
{% endblock %}

{% block body %}
	<header class="py-5 bg-gradient-to-r from-violet-100 via-slate-100 to-indigo-100 md:py-16">
		<div class="px-4 mx-auto sm:max-w-screen-sm md:max-w-screen-lg">
			<h1 class="text-4xl font-bold md:text-5xl">{{'Stop wasting time on Google search'| trans}}</h1>
			<p>{{'Lorem ipsum dolor sit amet consectetur adipisicing elit. Itaque tenetur quibusdam maxime quaerat odit soluta doloremque, voluptate adipisci pariatur, quae eos dolor ratione voluptatibus architecto laborum? Distinctio et fugit iusto!'| trans}}</p>
		</div>
	</header>
	<main class="max-w-screen-lg px-4 py-5 mx-auto md:py-16">
		<h3 class="text-violet-950 ">
			{{ ux_icon('mdi:calendar', { 'class': 'h-5 w-5 text-violet-950 mr-1 inline-block' }) }}
			{{'Recent notes'| trans}}
		</h3>
		<p class="mb-4">{{'There are curently'| trans}}
			{{ totalNotes }}
			{{'notes shared on CodeXpress'| trans}}</p>
		<div class="grid grid-cols-1 gap-4 md:grid-cols-2">
			{% for item in lastNotes %}
				<div class="flex flex-col p-4 mb-4 border rounded-md shadow-lg md:p-6">
					<h5 class="mb-1">{{ item.title|slice(0,40) }}...</h5>
					<p class="mb-2 text-sm text-slate-600">{{ item.content|slice(0,100) }}...</p>
					<div class="flex justify-between">
						<p class="mb-2 text-slate-600">
							<img src="{{ item.category.icon ?? 'default.jpg'}}" alt="{{ item.category.title }}" class="inline-block mr-2 h-7 w-7">
						</p>
						<a href="{{ path('app_note_show', {'slug': item.slug}) }}" class="self-end px-3 py-2 text-sm transition-all duration-200 ease-in-out rounded-md bg-violet-100 hover:bg-violet-200 w-fit">
							{{'check it'| trans}}
						</a>
					</div>
				</div>
			{% endfor %}
		</div>
		{% include 'components/cta.html.twig' %}
	</main>

{% endblock %}
